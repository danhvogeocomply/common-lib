{
    "compilerOptions": {
      "baseUrl": ".",
      "module": "commonjs",
      "moduleResolution": "node",
      "sourceMap": false,
      "target": "es2018",
      "lib": ["es2018"],
      "noLib": false,
      "skipLibCheck": true,
      "noImplicitAny": false,
      "noUnusedLocals": false,
      "removeComments": true,
      "strict": true,
      "strictNullChecks": false,
      "esModuleInterop": true,
      "isolatedModules": true,
      "allowJs": true,
      "resolveJsonModule": true,
      "types": ["node"],
      "paths": {
        "@andyvo/logger": ["./packages/logger"],
        "@andyvo/utils": ["./packages/utils"]
      }
    },
    "include": ["packages/**/*"],
    "exclude": ["node_modules"]  
}